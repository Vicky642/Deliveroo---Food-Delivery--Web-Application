<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deliveroo</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-gray-100 font-sans">
    <header>
        <nav class="bg-white shadow-lg">
            <div class="container mx-auto px-4">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-xl font-bold text-gray-800" href="#">Deliveroo</a>
                    </div>
                    <div class="flex items-center">
                        <ul class="flex items-center">
                            <li class="mr-6">
                                <a class="text-gray-700 hover:text-gray-900" href="#">Home</a>
                            </li>
                            @*<li>
                                <a class="text-gray-700 hover:text-gray-900" href="#">Privacy</a>
                            </li>*@
                        </ul>
                       
                        <div>
                            <partial name="_LoginPartial" />
                            <!-- Your Login Section here -->
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4">
        <main class="my-8">
            @RenderBody()
            <!-- Your content goes here -->
            @* Use Knockout.js bindings here for dynamic content *@
        </main>
    </div>

    <footer class="bg-gray-800 mt-12 pt-4">
        <div class="container mx-auto px-4 text-center text-gray-400 text-sm">
            &copy; 2023 - Deliveroo - <a class="text-gray-400 hover:text-white" href="#">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Include Knockout.js library here if required *@

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>



